{
  "manifest_version": 3,
  "name": "Quick Note",
  "version": "1.0",
  "description": "A simple notepad browser extension.",
  "permissions": [],
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_width": 400,
    "default_height": 500
  },
  "web_accessible_resources": [
    {
      "resources": [
        "markdown-it.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
